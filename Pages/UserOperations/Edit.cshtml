@model ge_repository.Pages.UserOperations.EditModel

@{
    ViewData["Title"] = "Edit";
}

@if (@Model.userType == "office") {
<h2>Edit Office User Operations</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ge_office_user.Id" />
            <input type="hidden" asp-for="ge_office_user.officeId" />
            <input type="hidden" asp-for="ge_office_user.userId"/>
            <input type="hidden" asp-for="ge_office_user.editedDT"/>
            <input type="hidden" asp-for="ge_office_user.editedId"/>
            <input type="hidden" asp-for="ge_office_user.createdDT"/>
            <input type="hidden" asp-for="ge_office_user.createdId"/>

            <input type="hidden" asp-for="userType"/>

            <div class="form-group">
                <label asp-for="ge_office_user.officeId" class="control-label"></label>
                <input readonly class="form-control" value = "@Model.ge_office_user.office.name"/>
            </div>
            <div class="form-group">
                <label asp-for="ge_office_user.userId" class="control-label"></label>
                <input readonly class="form-control" value="@Model.ge_office_user.user.FullName();"/>
            </div>
            <div class="form-group">
                <label asp-for="ge_office_user.operations" class="control-label"></label>
                <select asp-for="ge_office_user.operations" class="form-control" asp-items="ViewBag.selectOperations"></select>
                <span asp-validation-for="ge_office_user.operations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
}
