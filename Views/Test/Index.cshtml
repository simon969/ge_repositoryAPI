    <li><a asp-controller="Profile" asp-action="Index">Profile Sample</a></li>
    <li><a asp-controller="Streaming" asp-action="Index">Streaming Upload Sample</a></li>
</ul>
  <script src="~/js/drag_n_drop.js"></script>
</body>
</html>